<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity">

    <TextView
        android:id="@+id/Red"
        android:text="@string/Red"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:background="#FF0000"
        android:padding="20dp"
        />
    <TextView
        android:id="@+id/Orange"
        android:text="@string/Orange"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:background="#FF8000"
        android:padding="20dp"
        android:layout_below="@id/Red"
        android:layout_toEndOf="@id/Red"
        />
    <TextView
        android:id="@+id/Yellow"
        android:text="@string/Yellow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:background="#FFFF00"
        android:padding="20dp"
        android:layout_below="@id/Orange"
        android:layout_toEndOf="@id/Orange"
        />
    <TextView
        android:id="@+id/Green"
        android:text="@string/Green"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:background="#00FF00"
        android:padding="20dp"
        android:layout_below="@id/Yellow"
        android:layout_toStartOf="@id/Yellow"
        />
    <TextView
        android:id="@+id/Blue"
        android:text="@string/Blue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:background="#0000FF"
        android:padding="20dp"
        android:layout_below="@id/Green"
        android:layout_alignStart="@id/Red"
        />

</RelativeLayout>
